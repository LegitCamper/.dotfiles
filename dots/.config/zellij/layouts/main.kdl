layout {
    tab split_direction="vertical" hide_floating_panes=true {
		pane size="32%" 
        pane size="35%" name="helix" focus=true command="fish" {
            args "-Pc hx ."
        }
        pane size="33%"
        
        floating_panes {
            pane name="git" command="fish" {
                args "-Pc lazygit"
                y "10%"
                x "15%"
                height "80%"
                width "70%"
            }
        }
    }
}
